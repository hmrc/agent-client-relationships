{
    "microservice": "agent-client-relationships",
    "controller": "ClientTaxAgentsDataController",
    "apis": [
        {
            "endpoint": "GET /client/authorisations-relationships",
            "description": "Retrieves a consolidated view of an authenticated client's authorisations and relationships with agents.",
            "interactions": [
                {
                    "step": 1,
                    "type": "API Call",
                    "service": "hip",
                    "method": "GET",
                    "path": "/hip/relationships/agent/:arn/service/:service/client/:clientId",
                    "database": null,
                    "operation": null,
                    "description": "Get active relationships from HIP for each of the client's services."
                },
                {
                    "step": 2,
                    "type": "Database",
                    "service": null,
                    "method": null,
                    "path": null,
                    "database": "agent-client-relationships-db (invitations)",
                    "operation": "Read",
                    "description": "Find pending and accepted invitations for the client."
                },
                {
                    "step": 3,
                    "type": "API Call",
                    "service": "agent-assurance",
                    "method": "GET",
                    "path": "/agent-assurance/agent-details/:arn",
                    "database": null,
                    "operation": null,
                    "description": "Get details for each agent found in the relationships and invitations."
                }
            ]
        }
    ]
}