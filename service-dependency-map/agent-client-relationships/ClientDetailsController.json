{
    "microservice": "agent-client-relationships",
    "controller": "ClientDetailsController",
    "apis": [
        {
            "endpoint": "GET /client/:service/details/:clientId",
            "description": "Provides details about a client, including any pending invitations and existing relationships with the authenticated agent.",
            "interactions": [
                {
                    "step": 1,
                    "type": "API Call",
                    "service": "des",
                    "method": "GET",
                    "path": "/registration/individual/nino/:nino",
                    "database": null,
                    "operation": null,
                    "description": "Get client details from DES."
                },
                {
                    "step": 2,
                    "type": "Database",
                    "service": null,
                    "method": null,
                    "path": null,
                    "database": "agent-client-relationships-db (invitations)",
                    "operation": "Read",
                    "description": "Check for any pending invitations for this client and agent."
                },
                {
                    "step": 3,
                    "type": "Database",
                    "service": null,
                    "method": null,
                    "path": null,
                    "database": "agent-client-relationships-db (partial-auth)",
                    "operation": "Read",
                    "description": "Check for any partial-auth invitations for this client and agent."
                },
                {
                    "step": 4,
                    "type": "API Call",
                    "service": "enrolment-store-proxy",
                    "method": "GET",
                    "path": "/enrolment-store-proxy/enrolment-store/enrolments/:enrolmentKey/groups",
                    "database": null,
                    "operation": null,
                    "description": "Check for an existing relationship in the enrolment store."
                }
            ]
        }
    ]
}