{
    "microservice": "agent-client-relationships",
    "controller": "StrideGetPartialAuthsController",
    "apis": [
        {
            "endpoint": "GET /stride/partial-auths/nino/:nino",
            "description": "Allows a Stride user to retrieve partial-authorisation records for a client's NINO.",
            "interactions": [
                {
                    "step": 1,
                    "type": "Database",
                    "service": null,
                    "method": null,
                    "path": null,
                    "database": "agent-client-relationships-db (partial-auth)",
                    "operation": "Read",
                    "description": "Get all partial-auth records for the given NINO."
                },
                {
                    "step": 2,
                    "type": "API Call",
                    "service": "citizen-details",
                    "method": "GET",
                    "path": "/citizen-details/nino/:nino",
                    "database": null,
                    "operation": null,
                    "description": "Get the client's name from Citizen Details."
                },
                {
                    "step": 3,
                    "type": "API Call",
                    "service": "agent-assurance",
                    "method": "GET",
                    "path": "/agent-assurance/agent-details/:arn",
                    "database": null,
                    "operation": null,
                    "description": "Get details for each agent found in the partial-auth records to check for suspension and retrieve agent name."
                }
            ]
        }
    ]
}